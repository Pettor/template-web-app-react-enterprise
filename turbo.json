{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "globalEnv": ["PORT"],
  "tasks": {
    "prepare": {
      "cache": true,
      "inputs": [".husky/**", "package.json"]
    },
    "generate:exports": {
      "cache": true,
      "inputs": ["src/**/*.ts", "src/**/*.tsx", ".barrelsby.json"],
      "outputs": ["src/index.ts"]
    },
    "build": {
      "dependsOn": ["generate:exports", "^build"],
      "inputs": ["src/**", "package.json", "tsconfig.json"],
      "outputs": ["dist/**", "build/**"]
    },
    "deploy": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "output/deployment/**"]
    },
    "dev": {
      "cache": false,
      "dependsOn": ["^build"],
      "persistent": true
    },
    "dev:mocks": {
      "cache": false,
      "dependsOn": ["^build"], 
      "persistent": true
    },
    "clean": {
      "cache": false
    },
    "clean:all": {
      "cache": false
    },
    "lint": {
      "cache": true,
      "inputs": ["src/**", ".eslintrc.*", "package.json"],
      "outputs": []
    },
    "lint:fix": {
      "cache": false
    },
    "test": {
      "cache": true,
      "inputs": ["src/**", "test/**", "package.json"],
      "outputs": []
    },
    "test:e2e:env": {
      "cache": false
    },
    "test:coverage": {
      "cache": true,
      "inputs": ["src/**", "test/**", "package.json"],
      "outputs": ["**/.coverage/**/*"]
    },
    "test:coverage:ci": {
      "cache": true,
      "inputs": ["src/**", "test/**", "package.json"]
    },
    "storybook": {
      "cache": false,
      "persistent": true
    },
    "storybook:build": {
      "cache": true,
      "dependsOn": ["^build"],
      "inputs": ["src/**/*.tsx", "src/**/*.ts", ".storybook/**", "package.json"],
      "outputs": ["**/storybook-static/**"]
    },
    "storybook:move": {
      "cache": true,
      "inputs": ["storybook-static/**"],
      "outputs": ["output/storybook-static/**"]
    }
  }
}
