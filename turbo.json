{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "globalEnv": ["PORT"],
  "tasks": {
    "prepare": {
      "cache": true
    },
    "generate:exports": {
      "cache": false
    },
    "dev": {
      "cache": false,
      "dependsOn": ["^build"],
      "persistent": true
    },
    "dev:mocks": {
      "cache": false,
      "dependsOn": ["^build"],
      "persistent": true
    },
    "clean": {
      "cache": false
    },
    "clean:all": {
      "cache": false
    },
    "lint": {
      "cache": false
    },
    "lint:fix": {
      "cache": false
    },
    "build": {
      "dependsOn": ["generate:exports", "^build"],
      "outputs": ["dist/**", "build/**"]
    },
    "deploy": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "output/deployment/**"]
    },
    "storybook": {
      "cache": false
    },
    "storybook:build": {
      "cache": false,
      "dependsOn": ["^build"],
      "inputs": ["src/**/*.tsx", "src/**/*.ts", "test/**/*.ts"],
      "outputs": ["**/storybook-static/**"]
    },
    "storybook:move": {
      "cache": false,
      "outputs": ["output/storybook-static/**"]
    },
    "test": {
      "cache": false
    },
    "test:e2e:env": {
      "cache": false
    },
    "test:coverage": {
      "cache": false,
      "outputs": ["**/.coverage/**/*"]
    },
    "test:coverage:ci": {
      "cache": false,
      "outputs": ["output/coverage/*.xml"]
    }
  }
}
