{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "globalEnv": ["PORT"],
  "tasks": {
    "prepare": {
      "cache": true,
      "inputs": [".husky/**", "package.json"]
    },
    "design:build": {
      "cache": true,
      "inputs": ["src/**/*.json", "style-dictionary.config.js", "package.json"],
      "outputs": ["dist/**"]
    },
    "generate:exports": {
      "cache": true,
      "inputs": ["src/**/*.ts", "src/**/*.tsx", ".barrelsby.json", "barrelsby.json", "package.json"],
      "outputs": ["src/index.ts"]
    },
    "build": {
      "dependsOn": ["design:build", "generate:exports", "^build"],
      "inputs": ["src/**", "package.json", "tsconfig.json", "vite.config.ts", "eslint.config.js"],
      "outputs": ["dist/**", "build/**"]
    },
    "deploy": {
      "dependsOn": ["build", "storybook:build"],
      "cache": true,
      "inputs": ["dist/**", "build/**", "storybook-static/**"],
      "outputs": ["output/deployment/**"]
    },
    "dev": {
      "cache": false,
      "dependsOn": ["^build"],
      "persistent": true
    },
    "dev:mocks": {
      "cache": false,
      "dependsOn": ["^build"], 
      "persistent": true
    },
    "mocks": {
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    },
    "clean:all": {
      "cache": false
    },
    "lint": {
      "cache": true,
      "inputs": ["src/**", "eslint.config.js", ".eslintrc.*", "package.json", "tsconfig.json"],
      "outputs": []
    },
    "lint:fix": {
      "cache": false,
      "inputs": ["src/**", "eslint.config.js", ".eslintrc.*", "package.json", "tsconfig.json"]
    },
    "test": {
      "cache": true,
      "inputs": ["src/**", "test/**", "vitest.config.ts", "package.json", "tsconfig.json"],
      "outputs": ["coverage/**"]
    },
    "test:ci": {
      "cache": true,
      "inputs": ["src/**", "test/**", "vitest.config.ts", "package.json", "tsconfig.json"],
      "outputs": [".test-results/**"]
    },
    "test:e2e": {
      "cache": true,
      "dependsOn": ["^build"],
      "inputs": ["src/**", "playwright.config.ts", "package.json"],
      "outputs": [".test-results/**", "test-results/**"]
    },
    "test:e2e:env": {
      "cache": false,
      "persistent": true
    },
    "test:coverage": {
      "cache": true,
      "inputs": ["src/**", "test/**", "vitest.config.ts", "package.json", "tsconfig.json"],
      "outputs": ["coverage/**", ".coverage/**"]
    },
    "test:coverage:ci": {
      "cache": true,
      "inputs": ["src/**", "test/**", "vitest.config.ts", "package.json", "tsconfig.json"],
      "outputs": ["coverage/**"]
    },
    "storybook": {
      "cache": false,
      "dependsOn": ["^build"],
      "persistent": true
    },
    "storybook:build": {
      "cache": true,
      "dependsOn": ["^build"],
      "inputs": ["src/**/*.tsx", "src/**/*.ts", ".storybook/**", "package.json", "tsconfig.json", "vite.config.ts"],
      "outputs": ["storybook-static/**"]
    },
    "storybook:move": {
      "cache": true,
      "dependsOn": ["storybook:build"],
      "inputs": ["storybook-static/**"],
      "outputs": ["output/storybook-static/**"]
    }
  }
}
