{
  "typography": {
    "font-family": {
      "primary": {
        "$type": "fontFamily",
        "$value": ["Rubik", "sans-serif", "system-ui"],
        "$description": "Primary font family for the application"
      }
    },
    "font-weight": {
      "light": {
        "$type": "fontWeight",
        "$value": 300
      },
      "regular": {
        "$type": "fontWeight",
        "$value": 400
      },
      "medium": {
        "$type": "fontWeight",
        "$value": 500
      },
      "semibold": {
        "$type": "fontWeight",
        "$value": 600
      },
      "bold": {
        "$type": "fontWeight",
        "$value": 700
      },
      "extrabold": {
        "$type": "fontWeight",
        "$value": 800
      },
      "black": {
        "$type": "fontWeight",
        "$value": 900
      }
    },
    "font-size": {
      "hero": {
        "mobile": {
          "$type": "fontSize",
          "$value": "2.25rem",
          "$description": "Hero text size on mobile (36px)"
        },
        "tablet": {
          "$type": "fontSize",
          "$value": "3rem",
          "$description": "Hero text size on tablet (48px)"
        },
        "desktop": {
          "$type": "fontSize",
          "$value": "4.5rem",
          "$description": "Hero text size on desktop (72px)"
        }
      },
      "subtitle": {
        "$type": "fontSize",
        "$value": "1.25rem",
        "$description": "Subtitle text size (20px)"
      }
    }
  }
}
