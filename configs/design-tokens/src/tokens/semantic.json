{
  "text": {
    "hero": {
      "primary": {
        "$type": "color",
        "$value": "{color.brand.primary}",
        "$description": "Primary text color for hero elements"
      },
      "gradient": {
        "$type": "gradient", 
        "$value": "{gradient.brand.primary-to-secondary}",
        "$description": "Gradient text for hero emphasis"
      }
    }
  },
  "surface": {
    "background": {
      "fade": {
        "$type": "gradient",
        "$value": "{gradient.background.radial-fade}",
        "$description": "Background surface with radial fade"
      }
    }
  },
  "layout": {
    "hero": {
      "spacing": {
        "$type": "spacing",
        "$value": "{spacing.hero.vertical}",
        "$description": "Hero layout vertical spacing"
      },
      "typography": {
        "size": {
          "mobile": {
            "$type": "fontSize",
            "$value": "{typography.font-size.hero.mobile}"
          },
          "tablet": {
            "$type": "fontSize", 
            "$value": "{typography.font-size.hero.tablet}"
          },
          "desktop": {
            "$type": "fontSize",
            "$value": "{typography.font-size.hero.desktop}"
          }
        },
        "weight": {
          "normal": {
            "$type": "fontWeight",
            "$value": "{typography.font-weight.medium}"
          },
          "emphasis": {
            "$type": "fontWeight",
            "$value": "{typography.font-weight.bold}"
          }
        }
      }
    },
    "grid": {
      "spacing": {
        "$type": "spacing",
        "$value": "{spacing.grid.gap}"
      }
    }
  }
}