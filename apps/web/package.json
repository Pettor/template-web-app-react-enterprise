{
  "name": "@app/web",
  "version": "0.6.0",
  "description": "Web application built with React, TypeScript, and Vite",
  "license": "MIT",
  "private": true,
  "type": "module",
  "scripts": {
    "clean": "rimraf dist",
    "clean:all": "pnpm clean node_modules",
    "dev": "vite --open",
    "dev:mocks": "vite --mode mocks",
    "lint": "eslint ./src",
    "lint:fix": "pnpm lint --fix",
    "build": "tsc && vite build",
    "deploy": "pnpm deploy:build && pnpm deploy:move",
    "deploy:build": "pnpm build",
    "deploy:move": "move-cli dist \"../../output/deployment/app\" --mkdirp",
    "test:e2e:env": "pnpm dev:mocks"
  },
  "dependencies": {
    "@config/tailwind": "workspace:*",
    "@fontsource/rubik": "catalog:design",
    "@heroicons/react": "catalog:design",
    "@heroui/react": "catalog:design",
    "@package/api": "workspace:*",
    "@package/react": "workspace:*",
    "@package/ui": "workspace:*",
    "@tanstack/react-form": "1.27.3",
    "@tanstack/react-query": "5.83.0",
    "clsx": "2.1.1",
    "immer": "11.0.1",
    "jotai": "2.13.1",
    "jotai-effect": "2.1.0",
    "react": "catalog:react19",
    "react-dom": "catalog:react19",
    "react-intl": "7.1.14",
    "react-router-dom": "7.11.0",
    "zod": "catalog:validation"
  },
  "devDependencies": {
    "@config/eslint": "workspace:*",
    "@config/typescript": "workspace:*",
    "@config/vite": "workspace:*",
    "@formatjs/cli": "6.7.4",
    "@package/storybook": "workspace:*",
    "@storybook/react": "catalog:storybook",
    "@tailwindcss/vite": "catalog:tailwind",
    "@vitejs/plugin-basic-ssl": "catalog:vite",
    "@vitejs/plugin-react": "catalog:vite",
    "babel-plugin-react-compiler": "catalog:react19",
    "storybook": "catalog:storybook",
    "tailwindcss": "catalog:tailwind",
    "typescript": "catalog:typescript",
    "usehooks-ts": "3.1.1",
    "vite": "catalog:vite",
    "vite-plugin-http2-proxy": "catalog:vite",
    "vite-plugin-pwa": "catalog:vite",
    "vite-tsconfig-paths": "catalog:vite",
    "vitest": "catalog:vitest",
    "workbox-window": "7.4.0"
  },
  "jest-junit": {
    "suiteName": "web tests",
    "outputDirectory": ".junit",
    "outputName": "web.xml"
  }
}
